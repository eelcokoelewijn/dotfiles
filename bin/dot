#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

set -e

parentDirectory="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P)"
dotfilesDirectory="$(cd "$( dirname "$parentDirectory" )" && pwd -P)"

displayUsageAndExit() {
	echo "dot -- dotfiles management"
	echo ""
	echo "Usage: dot [options]"
	echo ""
	echo "Options:"
	echo "  -e, --edit    Open dotfiles directory for editing"
	echo "  -h, --help    Show this help message and exit"
	exit
}

while test $# -gt 0; do
	case "$1" in
		"-h"|"--help")
			displayUsageAndExit
			;;
		"-e"|"--edit")
			exec "$EDITOR" "$dotfilesDirectory"
			exit
			;;
		*)
			echo "Invalid option: $1"
			displayUsageAndExit
			;;
	esac
	shift
done

export DOTFILES=$HOME/.dotfiles

# If we're on a Mac, let's set some defaults
if [ "$(uname -s)" == "Darwin" ]
then
	# Set macOS defaults
    echo "› macOS set defaults"
	$DOTFILES/macos/set-defaults.sh

	# Install homebrew
	echo "› brew install"
	$DOTFILES/homebrew/install.sh 2>&1

	# Upgrade homebrew
	echo "› brew update"
	brew update

	# Install all dependencies from Brewfile
	echo "› brew bundle; installing all dependencies from Brewfile"
	brew bundle	
fi

# Install rbenv
$DOTFILES/rbenv/install.sh 2>&1
# Install zsh
$DOTFILES/zsh/install.sh 2>&1

# Install software
echo "› $DOTFILES/script/install"
$DOTFILES/script/install
